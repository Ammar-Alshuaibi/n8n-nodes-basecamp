# Copy this file to .env and configure your settings

# Basic Authentication for n8n
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password_here

# Timezone (adjust to your timezone)
GENERIC_TIMEZONE=UTC

# Security (set to true if using HTTPS)
N8N_SECURE_COOKIE=false

# Optional: Custom webhook URL if you're using a reverse proxy
# WEBHOOK_URL=https://your-domain.com/

# PostgreSQL settings (change default password!)
POSTGRES_PASSWORD=your_secure_postgres_password

# Optional: If you want to use a different database name or user
# POSTGRES_DB=n8n
# POSTGRES_USER=n8n
